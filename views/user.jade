extends layout

block vars
  - var subtitle = 'レポジトリ一覧'

block content
  section.app-wrapper
    div.site-container
      div.app-title
        span.font26px Select repository
      div.app-container.repositories
        div.app-left(v-component='teams' v-with='avatar')
        include ./teams.jade
        div.app-right(v-component='select_repos' v-with='repos : repos')
        script#select_repos_component(type='x-template')
          div.select-repository
            div.location-title
              span.highlight {{repos[0].owner.login}}
              i.fa.fa-angle-right
              span Select repository
              div.right-btn
                a.btn.btn-base(href='/select_repo') Add Repository
            div.table
              div.table-line-title
                div.table-item.number.center
                  span #
                div.table-item.width180
                  span Repository Name
                div.table-item.width180
                  span Author
                div.table-item.width140
                  span Update Date
                div.table-item.center.width60
                  span Status
                div.table-item.center.width40
                  span Fav 
                div.table-item.width20
              include ./test_table_user.jade
